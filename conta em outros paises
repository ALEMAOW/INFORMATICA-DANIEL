package javaapplication1;

import java.util.Scanner;

public class JavaApplication1 {

    public static void main(String[] args) {
    Scanner entrada = new Scanner (System.in);
    System.out.println("informe onde comprou so seu produto: A = Paraguay, B = EUA, C = Brasil");
    
    String cod=entrada.next();
    
    System.out.println("informe o valor pago pelo produto");
    double conta = entrada.nextDouble();
    switch (cod){
        case "A":
            System.out.println("produto sento neste pais");
            System.out.println("valor: "+conta);
            break;
        case "B":
            valor=valor+(valor*15)/100;
            System.out.println("valor com aumento de 15%"+conta);
            break;
        case "C":
            valor=valor+(valor*15)/100;
            System.out.println("valor com aumento 20%"+conta);
            break;
            
        default:
            
            
    }
    }
    
}
